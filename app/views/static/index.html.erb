<div class="bgvid">

  <video autoplay loop poster="polina.jpg" id="bgvid">
  <source src="video.webm" type="video/webm">
  <source src="https://s3.amazonaws.com/echousa/video.mp4" type="video/mp4">
  </video>
  <!-- <%= image_tag('Facade.png', :class => "facade") %> -->

  <div class="overlay">


    <div class="col-sm-12" class="center-text">
      <center>
        <div class="wowzer">
          <%= image_tag('hackmizzou.png', {:class=> 'img-width'}) %>
        </div>

        <div class="desc">
          Tentitive date: October 3-5, 2015
        </div>
        <div class="desc spacing">
          <timer end-time="1443830784000">{{days}} days, {{hours}} hours, {{minutes}} minutes, {{seconds}} seconds.</timer>
        </div>


        <div class="email-desc">
          Join the mailing list. We'll keep you in the loop!
        </div>

        <div ng-controller="IntroCtrl">
          <form novalidate name="emailForm">
            <input ng-model="user.email" type="email" class="form-control small spacing" name="email" placeholder="Email"/>
            <input id="email-submit" ng-click="submitUser(user)" class="form-control small gold-border spacing clear" type="submit" value="Go!">
          </form>
          <div>
            Your email address is... {{user.email}}
          </div>
        </div>

      </center>
    </div>

  </div>
</div>


<div class="container footer">
  <div class="row">
    <div class="col-md-12">
      <center><%= image_tag('hackmizzou.png', {:class=>'img-width'}) %></center>
    </div>
  </div>
  <div class="row buffer">
    <div class="col-md-4">
      <p>
      Hack Mizzou is organized by <a href="http://acm.missouri.edu/">Mizzou Computing Association (MCA)</a>
    </p>
    </div>
    <div class="col-md-4">
      <p>
      <a href="https://mlh.io/">Major League Hackers</a>
    </p>
    </div>
    <div class="col-md-4">
    <p>
      Questions, comments, concerns should be directed to Drew at <%= mail_to 'agwrnd@mail.missouri.edu' %>
    </p>
    </div>
  </div>

</div>
